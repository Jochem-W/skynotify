    "idb-keyval": "^6.2.1",
    "next": "^15.1.2",
    "postgres": "^3.4.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "ua-parser-js": "2.0.0",
    "zustand": "^5.0.2"
